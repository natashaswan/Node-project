<%-include('../partials/head.ejs'); %>
<link rel="stylesheet" href="/css/product.css" />
<%-include('../partials/head-title.ejs', {title: docTitle, path: path}); %>
<%-include('../partials/navigation.ejs'); %>
<h1>My Products</h1>
<% if (prod.length > 0) {%> <% for (let i=0; i < prod.length; i++){ %>
<main>
  <div class="grid">
    <article class="card product-item">
      <header class="card_header">
        <h1 class="product_title"><%= prod[i].title %></h1>
      </header>
      <div class="card_image">
        <img src="<%= prod[i].image %>" width="20%" height="20%" />
      </div>
      <div class="card_content">
        <h2 class="../product_price"><%= prod[i].price %></h2>
        <p class="../product-description"><%= prod[i].description %></p>
      </div>

      <a
        href="/admin/product-edit/<%= prod[i].id %>?edit=<%= edit %>"
        class="btn"
        >Edit</a
      >

      <form action="/admin/delete-product" method="post">
        <button class="btn">Delete</button>
        <input type="hidden" value="<%= prod[i].id %>" name="productID" />
      </form>
    </article>
  </div>
</main>
<% } %> <% } %>
<h2>no products</h2>
<%-include('../partials/end.ejs'); %>
