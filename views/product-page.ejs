<%-include('partials/head.ejs'); %>
<link rel="stylesheet" href="/css/product.css" />
<%-include('partials/head-title.ejs', {title:docTitle, path:path}); %>
<%-include('partials/navigation.ejs'); %>

<h1>Product Page</h1>
<main>
  <div>
    <article>
      <header>
        <h1><%= prod.title %></h1>
      </header>
      <div>
        <img src="<%= prod.image %>" width="20%" height="20%" />
      </div>
      <div>
        <h2><%= prod.price %></h2>
        <p><%= prod.description%></p>
      </div>
      <form action="/cart" method="post">
        <button type="submit" class="btn">Add to cart</button>
        <input type="hidden" name="productID" value="<%= prod.id %>"></input>
      </form>
    </article>
  </div>
</main>
<%- include('partials/end.ejs'); %>
