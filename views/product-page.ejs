<%-include('partials/head.ejs'); %>
<link rel="stylesheet" href="/css/product.css" />
<%-include('partials/head-title.ejs', {title:docTitle, path:path}); %>
<%-include('partials/navigation.ejs'); %>

  <div class="small-container single-product">  
    <div class="row">
      <div class="col-2">
        <img
          src="<%= prod.image %>"
          id="product-img"
          width="100%"
          alt="woman in a floral dress"
        />

        <div class="small-img-row">
          <div class="small-img-col">
            <img src="<%= prod.image %>" alt="" width="100%">
          </div>
          <div class="small-img-col">
            <img src="<%= prod.image %>" alt="" width="100%">
          </div>
          <div class="small-img-col">
            <img src="<%= prod.image %>" alt="" width="100%">
          </div>
          <div class="small-img-col">
            <img src="<%= prod.image %>" alt="" width="100%">
          </div>
        </div>
        
      </div>
      <div class="col-2">
        <p>Dresses / <%= prod.category %></p>
        <h1><%= prod.title %></h1>
        <h4><%= prod.price %></h4>
        <select name="" id="">
          <option value="">---Select Size---</option>
          <option value="xxl">XXL</option>
          <option value="xl">XL</option>
          <option value="l">Large</option>
          <option value="m">Medium</option>
          <option value="s">Small</option>       
        </select>
        <input type="number" value="1">
        <form action="/cart" method="post">
          <button type="submit" class="btn">Add to cart</button>
          <input type="hidden" name="productID" value="<%= prod.id %>"></input>
        </form>
        <h3>Product Details</h3>
        <br>
        <p> <%= prod.description %> </p>      
                  
      </div>       
    </div>
  </div>     
  <div class="small-container">
    <div class="row row-2">
      <h2>Related Products</h2>
      <p>View More</p>
    </div>
  </div>

  <% if (prod.length > 0) {%> 
    
    
    <div class="row">
      <% for (let i=0; i < prod.length; i++){ %>
      <div class="col-4">
        <img
          src="<%= prod[i].image %>"
          alt="woman in a floral dress"
        />
        <h4><%= prod[i].title %></h4>
        <div class="rating">
          <% for (let i=0;i<5; i++) { %>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            fill="currentColor"
            class="bi bi-star-fill"
            viewBox="0 0 16 16"
          >
            <path
              d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"
            />
          </svg>
          <% } %>
        </div>
        <p><%= prod[i].price %></p>
        <form action="/cart" method="post">
          <button type="submit" class="btn-prod-list">Add to cart</button>
          <input type="hidden" name="productID" value="<%= prod.id %>"></input>
        </form>
        
          <a href="/all-products-list/<%= prod[i].id %>" class="btn-prod-list">Details</a>
        
      </div>
        
      <% } %>
    </div>
    <% } %>
    </div>
  </div>

<%-include('partials/footer.ejs'); %> <%-include('partials/end.ejs'); %>
<%-include('partials/end.ejs'); %>





