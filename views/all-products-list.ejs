<%-include('partials/head.ejs'); %>
<link rel="stylesheet" href="/css/product.css" />
<%-include('partials/head-title.ejs', {title: docTitle, path: path}); %>
<%-include('partials/navigation.ejs'); %>



<main>
  <div class="small-container">
  <div class="row row-2">
    <h2>All Products</h2>
    <select name="" id="">
      <option value="" elected>------select category--------</option>
      <option value="">Casual Dresses</option>
      <option value="">Evening Dresses</option>
      <option value="">Floral Dresses</option>
    </select>
  </div>
  
  <% if (prod.length > 0) {%> 
    
    
  <div class="row">
    <% for (let i=0; i < prod.length; i++){ %>
    <div class="col-4">
      <img
        src="<%= prod[i].image %>"
        alt="woman in a floral dress"
      />
      <h4><%= prod[i].title %></h4>
      <div class="rating">
        <% for (let i=0;i<5; i++) { %>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          fill="currentColor"
          class="bi bi-star-fill"
          viewBox="0 0 16 16"
        >
          <path
            d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"
          />
        </svg>
        <% } %>
      </div>
      <p><%= prod[i].price %></p>
    </div>

    <% } %>
  </div>
  <% } %>
  <div class="page-btn">
    <span>1</span>
    <span>2</span>
    <span>3</span>
    <span>4</span>
    <span>&#8594;</span>
  </div>
</div>  

  </div>
</main>


<h2>no products</h2>
